{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "required": ["repository"],
      "properties": {
        "repository": { "type": "string", "minLength": 1 },
        "pullPolicy": { "type": "string", "enum": ["Always", "IfNotPresent", "Never"] },
        "tag": { "type": "string" }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "type": { "type": "string", "enum": ["ClusterIP", "NodePort", "LoadBalancer", "ExternalName"] },
        "ports": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["port", "targetPort", "name", "protocol"],
            "properties": {
              "port": { "type": "integer" },
              "targetPort": { "type": "integer" },
              "name": { "type": "string" },
              "protocol": { "type": "string", "enum": ["TCP", "UDP", "SCTP"] }
            }
          }
        }
      }
    },
    "cronjob": {
      "type": "object",
      "required": ["schedule"],
      "properties": {
        "schedule": { "type": "string", "minLength": 1 },
        "concurrencyPolicy": { "type": "string", "enum": ["Allow", "Forbid", "Replace"] },
        "successfulJobsHistoryLimit": { "type": "integer", "minimum": 0 },
        "failedJobsHistoryLimit": { "type": "integer", "minimum": 0 },
        "startingDeadlineSeconds": { "type": "integer", "minimum": 0 },
        "suspend": { "type": "boolean" },
        "timeZone": { "type": "string" }
      }
    },
    "job": {
      "type": "object",
      "properties": {
        "restartPolicy": { "type": "string", "enum": ["OnFailure", "Never"] },
        "backoffLimit": { "type": "integer", "minimum": 0 },
        "activeDeadlineSeconds": { "type": "integer", "minimum": 1 },
        "ttlSecondsAfterFinished": { "type": "integer", "minimum": 0 },
        "completions": { "type": "integer", "minimum": 1 },
        "parallelism": { "type": "integer", "minimum": 1 }
      }
    },
    "podSecurityContext": { "type": "object" },
    "securityContext": { "type": "object" },
    "resources": { "type": "object" },
    "nodeSelector": { "type": "object" },
    "tolerations": { "type": "array" },
    "affinity": { "type": "object" },
    "topologySpreadConstraints": { "type": "array" },
    "terminationGracePeriodSeconds": { "type": "integer", "minimum": 0 },
    "dnsPolicy": { "type": "string", "enum": ["", "ClusterFirst", "Default", "None", "ClusterFirstWithHostNet"] },
    "dnsConfig": { "type": "object" },
    "hostAliases": { "type": "array" },
    "priorityClassName": { "type": "string" },
    "runtimeClassName": { "type": "string" },
    "shareProcessNamespace": { "type": "boolean" },
    "extraVolumes": { "type": "array" },
    "extraVolumeMounts": { "type": "array" },
    "extraContainers": { "type": "array" },
    "extraEnvFrom": { "type": "array" },
    "extraInitContainers": { "type": "array" },
    "lifecycle": { "type": "object" },
    "podLabels": { "type": "object" },
    "commonLabels": { "type": "object" },
    "commonAnnotations": { "type": "object" },
    "component": { "type": "string" },
    "partOf": { "type": "string" },
    "networkPolicy": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "defaultDeny": { "type": "boolean" },
        "allowDNS": { "type": "boolean" }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "serviceMonitor": {
          "type": "object",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "podMonitor": {
          "type": "object",
          "properties": { "enabled": { "type": "boolean" } }
        }
      }
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "className": { "type": "string" },
        "controllerType": { "type": "string", "enum": ["haproxy", "nginx"] },
        "securityHeaders": {
          "type": "object",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "ssl": { "type": "object" },
        "proxy": { "type": "object" },
        "rateLimit": {
          "type": "object",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "cors": {
          "type": "object",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "websocket": {
          "type": "object",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "canary": {
          "type": "object",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "extraAnnotations": { "type": "object" },
        "extraLabels": { "type": "object" },
        "hosts": { "type": "array" },
        "tls": { "type": "array" }
      }
    },
    "ingressGRPC": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "className": { "type": "string" },
        "controllerType": { "type": "string", "enum": ["haproxy", "nginx"] },
        "securityHeaders": {
          "type": "object",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "ssl": { "type": "object" },
        "proxy": { "type": "object" },
        "extraAnnotations": { "type": "object" },
        "extraLabels": { "type": "object" },
        "hosts": { "type": "array" },
        "tls": { "type": "array" }
      }
    },
    "configmap": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "keyValues": { "type": "object" },
        "fileData": { "type": "array" }
      }
    },
    "ExternalSecret": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "type": { "type": "string", "enum": ["hashicorp", "aws", "gcp", "azure"] },
        "kvPath": { "type": "array" },
        "name": { "type": "string" },
        "region": { "type": "string" },
        "projectId": { "type": "string" },
        "vaultUrl": { "type": "string" }
      }
    },
    "initContainers": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "containers": { "type": "array" }
      }
    },
    "env": { "type": "array" },
    "imagePullSecrets": { "type": "array" },
    "nameOverride": { "type": "string" },
    "fullnameOverride": { "type": "string" },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "annotations": { "type": "object" },
        "name": { "type": "string" }
      }
    },
    "podAnnotations": { "type": "object" },
    "command": { "type": "array" },
    "args": { "type": "array" },
    "volumeMounts": { "type": "array" },
    "volumes": { "type": "array" }
  }
}
