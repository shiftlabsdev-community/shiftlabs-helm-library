{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "minimum": 0
    },
    "image": {
      "type": "object",
      "required": ["repository"],
      "properties": {
        "repository": { "type": "string", "minLength": 1 },
        "pullPolicy": { "type": "string", "enum": ["Always", "IfNotPresent", "Never"] },
        "tag": { "type": "string" }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["ClusterIP", "NodePort", "LoadBalancer", "ExternalName"] },
        "ports": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["port", "targetPort", "name", "protocol"],
            "properties": {
              "port": { "type": "integer" },
              "targetPort": { "type": "integer" },
              "name": { "type": "string" },
              "protocol": { "type": "string", "enum": ["TCP", "UDP", "SCTP"] }
            }
          }
        }
      }
    },
    "probes": {
      "type": "object",
      "properties": {
        "startup": { "$ref": "#/definitions/probe" },
        "liveness": { "$ref": "#/definitions/probe" },
        "readiness": { "$ref": "#/definitions/probe" }
      }
    },
    "statefulset": {
      "type": "object",
      "properties": {
        "podManagementPolicy": { "type": "string", "enum": ["OrderedReady", "Parallel"] },
        "serviceName": { "type": "string" },
        "updateStrategy": {
          "type": "object",
          "properties": {
            "type": { "type": "string", "enum": ["RollingUpdate", "OnDelete"] },
            "rollingUpdate": {
              "type": "object",
              "properties": {
                "partition": { "type": "integer", "minimum": 0 }
              }
            }
          }
        }
      }
    },
    "persistence": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "storageClass": { "type": "string" },
        "mountPath": { "type": "string" },
        "accessModes": {
          "type": "array",
          "items": { "type": "string", "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany", "ReadWriteOncePod"] }
        },
        "size": { "type": "string" },
        "volumeClaimTemplates": { "type": "array" },
        "persistentVolumeClaimRetentionPolicy": { "type": "object" },
        "ordinals": {
          "type": "object",
          "properties": {
            "start": { "type": "integer", "minimum": 0 }
          }
        }
      }
    },
    "podSecurityContext": { "type": "object" },
    "securityContext": { "type": "object" },
    "resources": { "type": "object" },
    "nodeSelector": { "type": "object" },
    "tolerations": { "type": "array" },
    "affinity": { "type": "object" },
    "topologySpreadConstraints": { "type": "array" },
    "terminationGracePeriodSeconds": { "type": "integer", "minimum": 0 },
    "dnsPolicy": { "type": "string", "enum": ["", "ClusterFirst", "Default", "None", "ClusterFirstWithHostNet"] },
    "dnsConfig": { "type": "object" },
    "hostAliases": { "type": "array" },
    "priorityClassName": { "type": "string" },
    "runtimeClassName": { "type": "string" },
    "shareProcessNamespace": { "type": "boolean" },
    "extraVolumes": { "type": "array" },
    "extraVolumeMounts": { "type": "array" },
    "extraContainers": { "type": "array" },
    "extraEnvFrom": { "type": "array" },
    "extraInitContainers": { "type": "array" },
    "lifecycle": { "type": "object" },
    "podLabels": { "type": "object" },
    "commonLabels": { "type": "object" },
    "commonAnnotations": { "type": "object" },
    "component": { "type": "string" },
    "partOf": { "type": "string" },
    "networkPolicy": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "defaultDeny": { "type": "boolean" },
        "allowDNS": { "type": "boolean" }
      }
    },
    "verticalPodAutoscaler": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "updatePolicy": { "type": "object" },
        "resourcePolicy": { "type": "object" }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "serviceMonitor": {
          "type": "object",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "podMonitor": {
          "type": "object",
          "properties": { "enabled": { "type": "boolean" } }
        }
      }
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "className": { "type": "string" },
        "controllerType": { "type": "string", "enum": ["haproxy", "nginx"] },
        "securityHeaders": {
          "type": "object",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "ssl": { "type": "object" },
        "proxy": { "type": "object" },
        "rateLimit": {
          "type": "object",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "cors": {
          "type": "object",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "websocket": {
          "type": "object",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "canary": {
          "type": "object",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "extraAnnotations": { "type": "object" },
        "extraLabels": { "type": "object" },
        "hosts": { "type": "array" },
        "tls": { "type": "array" }
      }
    },
    "ingressGRPC": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "className": { "type": "string" },
        "controllerType": { "type": "string", "enum": ["haproxy", "nginx"] },
        "securityHeaders": {
          "type": "object",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "ssl": { "type": "object" },
        "proxy": { "type": "object" },
        "extraAnnotations": { "type": "object" },
        "extraLabels": { "type": "object" },
        "hosts": { "type": "array" },
        "tls": { "type": "array" }
      }
    },
    "configmap": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "keyValues": { "type": "object" },
        "fileData": { "type": "array" }
      }
    },
    "ExternalSecret": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "type": { "type": "string", "enum": ["hashicorp", "aws", "gcp", "azure"] },
        "kvPath": { "type": "array" },
        "name": { "type": "string" },
        "region": { "type": "string" },
        "projectId": { "type": "string" },
        "vaultUrl": { "type": "string" }
      }
    },
    "initContainers": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "containers": { "type": "array" }
      }
    },
    "env": { "type": "array" },
    "imagePullSecrets": { "type": "array" },
    "nameOverride": { "type": "string" },
    "fullnameOverride": { "type": "string" },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "annotations": { "type": "object" },
        "name": { "type": "string" }
      }
    },
    "podAnnotations": { "type": "object" }
  },
  "definitions": {
    "probe": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "type": { "type": "string", "enum": ["http", "tcp", "grpc", "exec"] },
        "initialDelaySeconds": { "type": "integer", "minimum": 0 },
        "periodSeconds": { "type": "integer", "minimum": 1 },
        "timeoutSeconds": { "type": "integer", "minimum": 1 },
        "failureThreshold": { "type": "integer", "minimum": 1 },
        "successThreshold": { "type": "integer", "minimum": 1 }
      }
    }
  }
}
